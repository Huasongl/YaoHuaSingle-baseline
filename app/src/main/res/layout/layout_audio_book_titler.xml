<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/color_c107">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="24dp"
            android:id="@+id/book_detail_left_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerInside"
            android:src="@drawable/titlebar_icon_back_white" />

        <TextView
            android:id="@+id/book_detail_left_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:contentDescription="@null"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="详情页"
            android:textColor="@color/color_c107"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/book_detail_left_back"
            app:layout_constraintRight_toLeftOf="@+id/book_detail_right_share"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"
            android:layout_marginStart="@dimen/common_dp_14"
            android:layout_marginLeft="@dimen/common_dp_14" />


        <ImageView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="16dp"
            android:id="@+id/book_detail_right_share"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerInside"
            app:layout_constraintRight_toLeftOf="@+id/book_detail_right_more"
            android:src="@drawable/titlebar_icon_share_wilte" />

        <ImageView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="20dp"
            android:id="@+id/book_detail_right_more"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerInside"
            android:src="@drawable/titlebar_icon_more_white" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>